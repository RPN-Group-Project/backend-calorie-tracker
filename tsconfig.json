{
  "compilerOptions": {
    // Enable latest features
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    // Bundler mode
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  }
}